            <action method="setCanLoadExtJs">
                <flag>1</flag>
            </action>
            <action method="addJs">
                <script>mage/adminhtml/variables.js</script>
            </action>
            <action method="addJs">
                <script>mage/adminhtml/wysiwyg/widget.js</script>
            </action>
        </reference>
    </default>
    <reseller_adminhtml_country_index>
        <reference name="content">
            <block type="reseller/adminhtml_country" name="country" />
        </reference>
    </reseller_adminhtml_country_index>
    <reseller_adminhtml_reseller_index>
        <reference name="content">
            <block type="reseller/adminhtml_reseller" name="reseller" />
        </reference>
    </reseller_adminhtml_reseller_index>
</layout>